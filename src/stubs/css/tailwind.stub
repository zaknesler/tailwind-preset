[v-cloak] {
    display: none;
}

@tailwind base;
@tailwind components;

.btn {
    @apply px-6 py-3 bg-brand-500 font-semibold text-white rounded-lg border-none appearance-none transition duration-100 transition-shadow;
}

.btn:hover {
    @apply bg-brand-600;
}

.btn:focus {
    @apply outline-none shadow-outline;
}

@tailwind utilities;
